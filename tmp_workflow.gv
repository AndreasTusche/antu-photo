        Take       [label="Take Photos\nRAW, JPG"]

        Metadata   [label="Correct\nMetadata"]
        Timestamps [label="Correct\nTimestamps"]
        Presort    [label="Presort Images"]
        Review     [label="Review\nand Trash"]

