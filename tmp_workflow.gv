        Working    [label="Working Folder"]
        Sorted     [label="<1> Local Archive\nor Catalogue | <R> RAW | <J> JPG"]

        Catalogue  [label="<1> Catalogue | <J> JPG"]

        NASInbox   [label="<1> NAS Inbox | { <R> RAW | <J> JPG }"]
